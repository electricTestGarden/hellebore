---
/**
 * The template for displaying the footer
 * Contains the closing of the #content div and all content after
 */
const menu = [
  { text: "Home", path: "/" },
  { text: "About", path: "/about" },
  { text: "Characters", path: "/characters" },
  { text: "Shop", path: "http://www.redbubble.com/people/burritomadness/portfolio", target: "_blank" },
  { text: "Archive", path: "/archive" },
]; 

const followMenu = [
    { text: "Bluesky", path: "https://bsky.app/profile/burritomadness.bsky.social", target: "_blank" },
    { text: "Comic Rocket", path: "https://www.comic-rocket.com/explore/manifold-destiny", target: "_blank" },
    { text: "Archive Binge", path: "https://archivebinge.com/comic/239", target: "_blank" },
    { text: "RSS", path: "/rss", target: "_blank" },
];

const year = new Date().toLocaleDateString('en-US', { year: 'numeric' });
    
---

<footer id="colophon" class="site-footer">
    <div class="site-footer__menu-wrapper">
        <div class="site-footer__menu-column">
            <h4>Menu</h4>
            <div class="menu-primary-container">
                <ul class="menu">
                    { menu.map((data) => <li class="menu-item"><a href={data.path} target={data.target || "_self"}>{data.text}</a></li>)}
                </ul>
            </div>
        </div>
        <div class="site-footer__menu-column">
            <h4>Follow Us</h4>
            <ul class="menu">
                { followMenu.map((data) => <li class="menu-item"><a href={data.path} target={data.target || "_self"}>{data.text}</a></li>)}
            </ul> 
        </div>
        <div class="site-footer__menu-column hide-small">
            <img
                alt="Footer image alt text goes here!"
                src="/assets/images/chairs.png"
            />
        </div>
    </div>
    <div class="copyright">
        <p>Â© 2013 - {year} Your Comic</p>
    </div>
</footer><!-- #colophon -->
<!-- #page -->

<div id="help-popup" class="hidden">
    Help
</div>

<script src="/assets/js/sticky-nav.js" type="text/javascript" />
<script src="/assets/js/navigation.js" type="text/javascript" />
<script src="/assets/js/skip-link-focus-fix.js" type="text/javascript" />
<script src="/assets/js/help-popup.js" type="text/javascript" />
